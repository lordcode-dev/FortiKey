{
  "manifest_version": 3,
  "name": "FortiKey - Secure Password Manager",
  "version": "1.0.0",
  "description": "Generate strong passwords, securely store credentials with a master password, autofill login forms, and toggle dark/light mode.",
  "icons": {
    "16": "ui/icons/icon16.png",
    "48": "ui/icons/icon48.png",
    "128": "ui/icons/icon128.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "ui/icons/icon16.png",
      "48": "ui/icons/icon48.png",
      "128": "ui/icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/autofill.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options/options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "ui/icons/icon16.png",
        "ui/icons/icon48.png",
        "ui/icons/icon128.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}

